#include <stdio.h>
#include <limits.h>

int main() {
    int n, i, time = 0, completed = 0, min_bt, shortest = -1, finish_time;
    int at[10], bt[10], rt[10], ct[10], tat[10], wt[10];
    int is_completed[10] = {0};

    printf("Enter number of processes: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        printf("Enter Arrival Time and Burst Time for process %d: ", i+1);
        scanf("%d %d", &at[i], &bt[i]);
        rt[i] = bt[i];  // remaining time initially = burst time
    }

    while(completed != n) {
        min_bt = INT_MAX;
        shortest = -1;

        for(i = 0; i < n; i++) {
            if(at[i] <= time && is_completed[i] == 0 && rt[i] < min_bt && rt[i] > 0) {
                min_bt = rt[i];
                shortest = i;
            }
        }

        if(shortest == -1) {
            time++;
            continue;
        }

        rt[shortest]--;
        time++;

        if(rt[shortest] == 0) {
            completed++;
            finish_time = time;
            ct[shortest] = finish_time;
            tat[shortest] = ct[shortest] - at[shortest];
            wt[shortest] = tat[shortest] - bt[shortest];
            is_completed[shortest] = 1;
        }
    }

    printf("\nSJF (Preemptive) Scheduling:\n");
    printf("P#\tAT\tBT\tCT\tTAT\tWT\n");
    for(i = 0; i < n; i++)
        printf("%d\t%d\t%d\t%d\t%d\t%d\n", i+1, at[i], bt[i], ct[i], tat[i], wt[i]);

    return 0;
}
